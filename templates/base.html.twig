<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Mascotalia{% endblock %}</title>
        <link rel="icon" href="{{ asset('imagenes/logo_mascotalia.png') }}">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>

    {% include 'partials/navbar.html.twig' %}

    <div class="container position-absolute top-10 start-50 translate-middle-x mt-3" style="z-index: 1050; max-width: 600px; width: 90%;">
        
        {# Mensajes de Éxito (Verdes) #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {# Mensajes de Error (Rojos) #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
    </div>

        {% block body %}{% endblock %}

        <footer class="footer-custom">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <img class="logo_ies" src="{{ asset('imagenes/logo-IES-negro.png') }}" alt="logo_ies">
                    <div class="d-flex align-items-center">

                        {# Barrita #}
                        <div class="vr mx-3" style="height:50px; width:2px;"></div>
                        <div class="d-flex align-items-center gap-4" style="font-weight: 500; font-size: 0.95rem;">

                            {# Grupo Teléfono #}
                            <div class="d-flex align-items-center gap-2">
                                <img src="{{ asset('imagenes/icono_telefono.png') }}" alt="Tel" style="height: 18px; width: auto;">
                                <span style="color: #000;">+54 342 444-9948</span>
                            </div>

                            {# Grupo Email #}
                            <div class="d-flex align-items-center gap-2">
                                <img src="{{ asset('imagenes/icono_email.png') }}" alt="Email" style="height: 16px; width: auto; margin-top: 2px;">
                                <span style="color: #000;">mascotalia@gmail.com</span>
                            </div>

                        </div>
                    </div>
                </div>

                <a class="brand-text" href="#" style="font-size: 1.2rem;">
                    <img class="logo_mascotalia" src="{{ asset('imagenes/logo_mascotalia.png') }}" alt="logo_mascotalia">
                    &nbsp;Mascotalia
                </a>
            </div>
        </footer>
        {# Script propio para mostrar/ocultar contraseñas #}
        <script src="{{ asset('js/password-toggle.js') }}"></script>
    </body>
</html>