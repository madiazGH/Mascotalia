<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Mascotalia{% endblock %}</title>
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>

    {% include 'partials/navbar.html.twig' %}

    <div class="container position-absolute top-10 start-50 translate-middle-x mt-3" style="z-index: 1050; max-width: 600px; width: 90%;">
        
        {# Mensajes de Éxito (Verdes) #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {# Mensajes de Error (Rojos) #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
    </div>

        {% block body %}{% endblock %}

        <footer class="footer-custom">
            <div class="container d-flex justify-content-between align-items-center">
                <span class="footer-text">© 2025 IES de Santa Fe</span>
                
                <a class="brand-text" href="#" style="font-size: 1.2rem;">
                    <img class="logo_mascotalia" src="..\public\imagenes\logo_mascotalia.png" alt="logo_mascotalia">
                    &nbsp;Mascotalia
                </a>
            </div>
        </footer>
    </body>
</html>