{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión - Mascotalia{% endblock %}

{% block body %}

    {# --- FONDO MARRÓN (Igual que en Registro) --- #}
    <div style="background-color: #846355; min-height: 85vh; padding: 60px 0; display: flex; align-items: center;">
        
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    
                    {# --- TARJETA BLANCA --- #}
                    <div class="card border-0 shadow-lg" style="border-radius: 12px; padding: 2.5rem;">
                        <div class="card-body p-0">
                            
                            {# Títulos #}
                            <h2 class="mb-2" style="color: #000; font-weight: bold; font-size: 1.8rem;">¡Bienvenido de vuelta!</h2>
                            <p class="mb-4" style="color: #888; font-size: 0.95rem;">
                                Hay muchas mascotas esperándote
                            </p>

                            {# Mensaje de Error (Symfony Security) #}
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {# INICIO DEL FORMULARIO #}
                            <form action="{{ path('app_login') }}" method="post">
                                
                                {# Email #}
                                <div class="mb-3">
                                    <label for="username" class="form-label" style="font-size: 0.85rem; color: #888;">Correo electrónico</label>
                                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="correo@electronico.com" autocomplete="email" required autofocus style="padding: 10px;">
                                </div>

                                {# Contraseña #}
                                <div class="mb-4">
                                    <label for="password" class="form-label" style="font-size: 0.85rem; color: #888;">Contraseña</label>
                                    <div class="input-group">
                                        <input type="password" name="_password" id="password" class="form-control" placeholder="Ingresa tu contraseña" autocomplete="current-password" required style="padding: 10px; border-right: 0;">
                                        <span class="input-group-text bg-white border-start-0">
                                            {# Icono Ojo Tachado SVG #}
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#666" class="bi bi-eye-slash" viewBox="0 0 16 16" style="cursor: pointer;">
                                                <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
                                                <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
                                                <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
                                            </svg>
                                        </span>
                                    </div>
                                </div>

                                {# Texto de registro #}
                                <div class="mb-4" style="font-size: 0.9rem; color: #666;">
                                    O creá una cuenta, <a href="{{ path('app_register') }}" style="color: var(--color-naranja); text-decoration: none; font-weight: bold; border-bottom: 1px solid var(--color-naranja);">registrándote.</a>
                                </div>

                                {# Token CSRF (Seguridad de Symfony) #}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                {# BOTÓN INICIAR SESIÓN #}
                                <div class="text-center">
                                    <button type="submit" class="btn text-white px-5 py-2 w-100" style="background-color: #0F5D3C; font-weight: 500; border-radius: 5px;">
                                        Iniciar Sesión
                                    </button>
                                </div>

                            </form>
                            {# FIN DEL FORMULARIO #}
                            
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}