{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión - Mascotalia{% endblock %}

{% block body %}

    {# FONDO MARRÓN (Igual que en Registro) #}
    <div style="background-color: #846355; min-height: 85vh; padding: 60px 0; display: flex; align-items: center;">
        
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    
                    {# TARJETA BLANCA #}
                    <div class="card border-0 shadow-lg" style="border-radius: 12px; padding: 2.5rem;">
                        <div class="card-body p-0">
                            
                            {# Títulos #}
                            <h2 class="mb-2" style="color: #000; font-weight: bold; font-size: 1.8rem;">¡Bienvenido de vuelta!</h2>
                            <p class="mb-4" style="color: #888; font-size: 0.95rem;">
                                Hay muchas mascotas esperándote
                            </p>

                            {# Mensaje de Error (Symfony Security) #}
                            {% if error %}
                                <div class="alert alert-danger">Credenciales inválidas</div>
                            {% endif %}

                            {# INICIO DEL FORMULARIO #}
                            <form action="{{ path('app_login') }}" method="post">
                                
                                {# Email #}
                                <div class="mb-3">
                                    <label for="username" class="form-label" style="font-size: 0.85rem; color: #888;">Correo electrónico</label>
                                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="correo@electronico.com" autocomplete="email" required autofocus style="padding: 10px;">
                                </div>

                                {# Contraseña #}
                                <div class="mb-4">
                                    <label for="password" class="form-label" style="font-size: 0.85rem; color: #888;">Contraseña</label>
                                    <div class="input-group">
                                        <input type="password" name="_password" id="password" class="form-control" placeholder="Ingresa tu contraseña" autocomplete="current-password" required style="padding: 10px; border-right: 0;">
                                        {# CAMBIO IMPORTANTE: Usamos un <button> con la clase 'btn-toggle-password' #}
                                        <button class="btn btn-outline-secondary bg-white border-start-0 border-bottom-0 border-top-0 btn-toggle-password" type="button">
                                            {# Ícono por defecto: Ojo Tachado (Slash) #}
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                                            <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                                            <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.829-2.829zm4.95.708-2.829-2.829a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/>
                                            </svg>
                                        </button>
                                    </div>
                                </div>

                                {# Texto de registro #}
                                <div class="mb-4" style="font-size: 0.9rem; color: #666;">
                                    O creá una cuenta, <a href="{{ path('app_register') }}" style="color: var(--color-naranja); text-decoration: none; font-weight: bold; border-bottom: 1px solid var(--color-naranja);">registrándote acá.</a>
                                </div>

                                {# Token CSRF (Seguridad de Symfony) #}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                {# BOTÓN INICIAR SESIÓN #}
                                <div class="text-center">
                                    <button type="submit" class="btn text-white px-5 py-2 w-100" style="background-color: #0F5D3C; font-weight: 500; border-radius: 5px;">
                                        Iniciar Sesión
                                    </button>
                                </div>

                            </form>
                            {# FIN DEL FORMULARIO #}
                            
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}