{% extends 'base.html.twig' %}

{% block title %}Editar Mascota{% endblock %}

{% block body %}

    <div style="background-color: #846355; min-height: 85vh; padding: 60px 0; display: flex; align-items: center;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    
                    <div class="card border-0 shadow-lg" style="border-radius: 12px; padding: 2rem;">
                        <div class="card-body">
                            
                            <h2 class="mb-4 text-center" style="color: #000; font-weight: bold;">Editar Mascota</h2>

                            <form action="{{ path('app_admin_mascota_editar', {id: mascota.id}) }}" method="post">
                                
                                {# Nombre y Especie #}
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Nombre</label>
                                        <input type="text" class="form-control" name="nombre" value="{{ mascota.nombre }}" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Especie</label>
                                        <select class="form-select" name="especie">
                                            <option value="Perro" {{ mascota.especie == 'Perro' ? 'selected' : '' }}>Perro</option>
                                            <option value="Gato" {{ mascota.especie == 'Gato' ? 'selected' : '' }}>Gato</option>
                                        </select>
                                    </div>
                                </div>

                                {# Edad y Tamaño #}
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Edad (Años)</label>
                                        <input type="number" class="form-control" name="edad" value="{{ mascota.edad }}" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Tamaño</label>
                                        <select class="form-select" name="tamano">
                                            <option value="Pequeño" {{ mascota.tamaño == 'Pequeño' ? 'selected' : '' }}>Pequeño</option>
                                            <option value="Mediano" {{ mascota.tamaño == 'Mediano' ? 'selected' : '' }}>Mediano</option>
                                            <option value="Grande" {{ mascota.tamaño == 'Grande' ? 'selected' : '' }}>Grande</option>
                                        </select>
                                    </div>
                                </div>

                                {# URL Imagen #}
                                <div class="mb-3">
                                    <label class="form-label text-muted small">URL de la Imagen</label>
                                    <input type="text" class="form-control" name="imagen" value="{{ mascota.imagen }}" required>
                                </div>

                                {# Descripción #}
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Descripción</label>
                                    <textarea class="form-control" name="descripcion" rows="4">{{ mascota.descripcion }}</textarea>
                                </div>

                                {# Checkbox Disponible #}
                                <div class="form-check mb-4">
                                    <input class="form-check-input" type="checkbox" name="disponible" id="checkDisp" {{ mascota.disponible ? 'checked' : '' }}>
                                    <label class="form-check-label" for="checkDisp">
                                        Mascota Disponible para adopción
                                    </label>
                                </div>

                                {# Botones #}
                                <div class="d-flex justify-content-center gap-3">
                                    <a href="{{ path('app_admin_mascotas') }}" class="btn btn-outline-secondary px-4">Cancelar</a>
                                    <button type="submit" class="btn text-white px-5" style="background-color: #0F5D3C;">Guardar Cambios</button>
                                </div>

                            </form>
                            
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}