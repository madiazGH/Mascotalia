{% extends 'base.html.twig' %}

{% block title %}Crear Cuenta - Mascotalia{% endblock %}

{% block body %}

    {# --- FONDO MARRÓN (Ocupa todo el ancho) --- #}
    {# Usamos min-height para asegurar que cubra la pantalla aunque haya poco contenido #}
    <div style="background-color: #846355; min-height: 85vh; padding: 60px 0; display: flex; align-items: center;">
        
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-9">
                    
                    {# --- TARJETA BLANCA --- #}
                    <div class="card border-0 shadow-lg" style="border-radius: 12px; padding: 2rem;">
                        <div class="card-body">
                            
                            {# Título y Link a Login #}
                            <h2 class="mb-1" style="color: #000; font-weight: bold; font-size: 1.8rem;">Bienvenido a Mascotalia</h2>
                            <p class="mb-4" style="color: #666; font-size: 0.95rem;">
                                ¿Ya tenés cuenta? 
                                <a href="{{ path('app_login') }}" style="color: var(--color-naranja); font-weight: bold;">Iniciá sesión</a>
                            </p>

                            {# INICIO DEL FORMULARIO #}
                            <form action="#" method="post">
                                
                                {# Fila 1: Nombre y Apellido #}
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Nombre</label>
                                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" style="padding: 10px;" oninput="this.value = this.value.replace(/[^a-zA-ZñÑáéíóúÁÉÍÓÚ\s]/g, '')" required>
                                    </div>
                                    <div class="col-md-6 mt-3 mt-md-0">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Apellido</label>
                                        <input type="text" class="form-control" name="apellido" placeholder="Apellido" style="padding: 10px;" oninput="this.value = this.value.replace(/[^a-zA-ZñÑáéíóúÁÉÍÓÚ\s]/g, '')" required>
                                    </div>
                                </div>

                                {# Fila 2: DNI y Fecha Nacimiento #}
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">DNI</label>
                                        <input type="text" class="form-control" name="dni" placeholder="DNI" style="padding: 10px;" oninput="this.value = this.value.replace(/[^0-9]/g, '')" required>
                                    </div>
                                    <div class="col-md-6 mt-3 mt-md-0">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Fecha de Nacimiento</label>
                                        {# Usamos type="text" para que se vea el placeholder 33/33/3333 igual a la imagen #}
                                        <input type="date" class="form-control" name="fechaNacimiento" style="padding: 10px;" required>
                                    </div>
                                </div>

                                {# Fila 3: Provincia y Ciudad #}
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Provincia</label>
                                        <input type="text" class="form-control" name="provincia" placeholder="Provincia" style="padding: 10px;" oninput="this.value = this.value.replace(/[^a-zA-ZñÑáéíóúÁÉÍÓÚ\s]/g, '')" required>
                                    </div>
                                    <div class="col-md-6 mt-3 mt-md-0">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Ciudad</label>
                                        <input type="text" class="form-control" name="ciudad" placeholder="Ciudad" style="padding: 10px;" oninput="this.value = this.value.replace(/[^a-zA-ZñÑáéíóúÁÉÍÓÚ\s]/g, '')" required>
                                    </div>
                                </div>

                                {# Fila 4: Direccion y Telefono #}
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Direccion</label>
                                        <input type="text" class="form-control" name="direccion" placeholder="Direccion, 1234" style="padding: 10px;" required>
                                    </div>
                                    <div class="col-md-6 mt-3 mt-md-0">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Número de Teléfono</label>
                                        <input type="text" class="form-control" name="telefono" placeholder="Teléfono" style="padding: 10px;" oninput="this.value = this.value.replace(/[^0-9]/g, '')" required>
                                    </div>
                                </div>

                                {# Fila 5: Correo (Ancho completo) #}
                                <div class="mb-3">
                                    <label class="form-label" style="font-size: 0.85rem; color: #888;">Correo Electrónico</label>
                                    <input type="email" class="form-control" name="email" placeholder="ejemplo@correo.com" style="padding: 10px;" required>
                                </div>

                                {# Fila 6: Contraseñas con ícono de ojo #}
                                <div class="row mb-4">
                                    {# Contraseña 1 #}
                                    <div class="col-md-6">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Contraseña</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" name="password" placeholder="Ingresa tu contraseña" style="padding: 10px; border-right: 0;" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Debe contener al menos 8 caracteres, incluyendo mayúsculas, minúsculas y números" required>
                                            {# CAMBIO IMPORTANTE: Usamos un <button> con la clase 'btn-toggle-password' #}
                                            <button class="btn btn-outline-secondary bg-white border-start-0 border-bottom-0 border-top-0 btn-toggle-password" type="button">
                                                {# Ícono por defecto: Ojo Tachado (Slash) #}
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                                                <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                                                <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.829-2.829zm4.95.708-2.829-2.829a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    {# Contraseña 2 #}
                                    <div class="col-md-6 mt-3 mt-md-0">
                                        <label class="form-label" style="font-size: 0.85rem; color: #888;">Repetir Contraseña</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" name="password_repeat" placeholder="Ingresa tu contraseña" style="padding: 10px; border-right: 0;"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Debe contener al menos 8 caracteres, incluyendo mayúsculas, minúsculas y números" required>
                                            {# CAMBIO IMPORTANTE: Usamos un <button> con la clase 'btn-toggle-password' #}
                                            <button class="btn btn-outline-secondary bg-white border-start-0 border-bottom-0 border-top-0 btn-toggle-password" type="button">
                                                {# Ícono por defecto: Ojo Tachado (Slash) #}
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                                                <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                                                <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.829-2.829zm4.95.708-2.829-2.829a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z"/>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                {# BOTÓN CREAR CUENTA #}
                                <div class="text-center mt-5">
                                    <button type="submit" class="btn text-white px-5 py-2" style="background-color: #0F5D3C; font-weight: 500; border-radius: 5px; width: 250px;">
                                        Crear Cuenta
                                    </button>
                                </div>

                            </form>
                            {# FIN DEL FORMULARIO #}
                            
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}